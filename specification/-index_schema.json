{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/neuromorphicsystems/undr/main/specification/-index_schema.json",
    "title": "-index",
    "description": "A directory index to store metadata",
    "definitions": {
        "path_object": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^(?:[A-Za-z0-9_\\-]+|[A-Za-z0-9_\\-\\.]+\\.(?!download$|br|decompress$)[^\\.]*)$"
                }
            },
            "required": ["name"]
        },
        "resource": {
            "type": "object",
            "properties": {
                "size": {
                    "description": "Uncompressed size in bytes",
                    "type": "integer",
                    "minimum": 0
                },
                "hash": {
                    "description": "SHA3-224 (FIPS 202) hash of the uncompressed bytes",
                    "type": "string",
                    "pattern": "^[a-f0-9]{56}$"
                },
                "compressions": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "description": "Compression algorithm",
                                        "type": "string",
                                        "enum": ["none"]
                                    },
                                    "suffix": {
                                        "type": "string"
                                    }
                                },
                                "required": ["type", "suffix"]
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "description": "Compression algorithm",
                                        "type": "string",
                                        "enum": ["brotli"]
                                    },
                                    "size": {
                                        "description": "Compressed size in bytes",
                                        "type": "integer",
                                        "minimum": 0
                                    },
                                    "hash": {
                                        "description": "SHA3-224 (FIPS 202) hash of the compressed bytes",
                                        "type": "string",
                                        "pattern": "^[a-f0-9]{56}$"
                                    },
                                    "suffix": {
                                        "type": "string"
                                    }
                                },
                                "required": ["type", "size", "hash", "suffix"]
                            }
                        ]
                    },
                    "minItems": 1
                },
                "doi": {
                    "type": "string",
                    "pattern": "^10[.].+$"
                }
            },
            "required": ["size", "hash", "compressions"]
        }
    },
    "type": "object",
    "properties": {
        "version": {
            "description": "schema version (Semantic Versioning 2.0.0)",
            "type": "object",
            "properties": {
                "major": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1
                },
                "minor": {
                    "type": "integer",
                    "minimum": 0
                },
                "patch": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "doi": {
            "description": "The directory's Digital Object Identifier used to generate BibTeX references",
            "type": "string",
            "pattern": "^10[.].+$"
        },
        "directories": {
            "description": "Subdirectories in the same directory as the index",
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_\\-]+"
            }
        },
        "files": {
            "description": "Dataset files with a supported format",
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/path_object"
                    },
                    {
                        "$ref": "#/definitions/resource"
                    },
                    {
                        "properties": {
                            "properties": {
                                "anyOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "description": "File type in the list of supported types",
                                                "enum": ["aps", "dvs"]
                                            },
                                            "width": {
                                                "description": "The sensor width in pixels",
                                                "type": "integer",
                                                "minimum": 0
                                            },
                                            "height": {
                                                "description": "The sensor height in pixels",
                                                "type": "integer",
                                                "minimum": 0
                                            }
                                        },
                                        "required": ["type", "width", "height"]
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "description": "File type in the list of supported types",
                                                "enum": ["imu"]
                                            }
                                        },
                                        "required": ["type"]
                                    }
                                ]
                            },
                            "metadata": {
                                "type": "object"
                            }
                        },
                        "required": ["properties"]
                    }
                ]
            }
        },
        "other_files": {
            "description": "Other files bundled with the dataset",
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/path_object"
                    },
                    {
                        "$ref": "#/definitions/resource"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "metadata": {
                                "type": "object"
                            }
                        },
                        "required": ["metadata"]
                    }
                ]
            }
        },
        "metadata": {
            "type": "object"
        }
    },
    "required": ["version", "directories", "files", "other_files"]
}
